<div class="content">
    <div class="container">
        <div class="page-title">
            <h3>Reporte de Existencias </h3>
        </div>
        <div class="row">
            <div class="col-lg-12">
                            <div class="card">
                                <div class="card-header">Super Tiendas Rarras S.A DE C.V.</div>
                                <div class="card-body">
                                    <h5 class="card-title"></h5>
                                    <form action="/controlenvases/newreportstocks" accept-charset="utf-8" method="POST">
                                        <div class="mb-3 row">
                                            <label class="col-sm-2">Sucursal:</label>
                                            <div class="col-sm-10 select">
                                                <select name="tienda" id="tienda" class="form-select">
                                                   {{#each stores}}

                                                    <option value="{{idtienda}}">{{idtienda}} {{nombretienda}}</option>                        

                                                 {{/each}}
                                                </select>
                                            </div>
                                        </div>
                                        <div class="mb-3 row">
                                            <label class="col-sm-2">Tipo de Envase:</label>
                                            <div class="col-sm-10 select">
                                                <select name="tipoenvase" id="tipoenvase" class="form-select">
                                                  
                                                    <option value="AMBOS">AMBOS</option>
                                                    <option value="ENVASE LLENO">ENVASE LLENO</option>
                                                    <option value="ENVASE VACIO">ENVASE VACIO</option>
                                                    
                                                                             

                                              
                                                </select>
                                            </div>
                                        </div>
                           
                                 
                                        <div class="line"></div><br>
                                        <div class="mb-3 row">
                                            <div class="col-sm-4 offset-sm-0">
                                               
                                                <button type="submit" name="enviar" id="enviar" class="btn btn-primary"><i class="fas fa-file-pdf"></i> Generar </button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>

        </div>
    </div>
</div>